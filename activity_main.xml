<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".MainActivity">

    <Button
            android:text="Nowa gra"
            android:layout_width="59dp"
            android:layout_height="61dp"
            android:id="@+id/start"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="13sp" app:layout_constraintEnd_toEndOf="parent"
    />
    <TextView

            android:textSize="20sp"
            android:layout_width="315dp"
            android:layout_height="40dp"
            android:id="@+id/word"
            android:layout_marginBottom="244dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.541" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/w12" app:layout_constraintVertical_bias="0.165"/>
    <EditText
            android:layout_width="33dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/guessLetter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.447"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/word"/>
    <Button
            android:text="OK"
            android:layout_width="45dp"
            android:layout_height="49dp"
            android:id="@+id/ok"
            style="@android:style/Widget.DeviceDefault.Button.Borderless.Small"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/guessLetter"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/word"/>
